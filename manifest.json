{
    "name": "Clear Cookie Extension",
    "version": "1.0",
    "description": "Google Chrome extension that clears cookie of current website and refreshes page",
    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/cookie_16.png",
            "32": "images/cookie_32.png",
            "64": "images/cookie_48.png",
            "128": "images/cookie_128.png"
        }
    },
    "icons":  {
        "16": "images/cookie_16.png",
        "32": "images/cookie_32.png",
        "64": "images/cookie_48.png",
        "128": "images/cookie_128.png"
    },
    "manifest_version": 2
}